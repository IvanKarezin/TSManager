<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="TSManager.Views.ExtendCurrentWindow"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="Продлить активность">
        
        <StackPanel>
                <TextBlock Margin="20" TextAlignment="Center">Дейли, пост дейли</TextBlock>
                <TextBlock TextAlignment="Center">Затрачено времени: 2:45</TextBlock>
                <Label HorizontalAlignment="Center">Продлить на:</Label>
                <TimePicker HorizontalAlignment="Center"></TimePicker>
                <Button Width="100" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10">OK</Button>
        </StackPanel>
</Window>
