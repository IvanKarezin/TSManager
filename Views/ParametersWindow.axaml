<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TSManager.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="TSManager.Views.ParametersWindow"
        x:DataType="vm:ParametersWindowViewModel"
        Title="Параметры"
        SizeToContent="WidthAndHeight">
    
    <Design.DataContext>
        <vm:ParametersWindowViewModel />
    </Design.DataContext>
        
    <StackPanel Margin="20">
            <TextBlock>Продолжительность рабочего дня</TextBlock>
            <RadioButton GroupName="DurationType">Ограниченное время</RadioButton>
            <RadioButton GroupName="DurationType">Неограниченное время</RadioButton>
            <TextBlock>Округление ТШ</TextBlock>
            <RadioButton GroupName="TSRound">В большую сторону</RadioButton>
            <RadioButton GroupName="TSRound">В меньшую сторону</RadioButton>
            
            <TextBlock Margin="0,20, 0,0">Кратность таймшита (мин)</TextBlock>
            <NumericUpDown />
            
            <TextBlock Margin="0,20,0,10">Формат таймшита:</TextBlock>
            <TextBlock>Префикс описания</TextBlock>
            <TextBox></TextBox>
            <TextBlock>Префикс задачи</TextBlock>
            <TextBox></TextBox>
            
            <Grid ColumnDefinitions="5*,*" RowDefinitions="*,*">
                <TextBlock Grid.Row="0" Margin="0, 20, 0,0" Grid.ColumnSpan="2">Директория ТШ</TextBlock>
                <TextBox Grid.Column="0" Grid.Row="1" Margin="0,0,10,0" />
                <Button Grid.Row="1" Grid.Column="1">Открыть</Button>
            </Grid>
        </StackPanel>
        
        
</Window>
